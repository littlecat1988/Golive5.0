<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/poster_vg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_recommend_poster"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/poster_igv"
            android:layout_width="@dimen/topic_recommend_item_width"
            android:layout_height="@dimen/topic_recommend_item_height"
            android:scaleType="fitXY"
            android:src="@color/default_bg"/>
    </FrameLayout>

</RelativeLayout>