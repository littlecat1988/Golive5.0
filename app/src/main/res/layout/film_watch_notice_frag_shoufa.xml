<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <com.golive.cinema.views.LetterSpacingTextView
        android:id="@+id/film_watch_notice_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ee"
        android:text="@string/film_watch_notice_title_shoufa"
        android:textSize="@dimen/film_watch_notice_title_text_size"
        app:letter_spacing="0.3"/>
    <com.golive.cinema.views.LetterSpacingTextView
        android:id="@+id/film_watch_notice_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/film_watch_notice_content_margin_top_shoufa"
        android:lineSpacingExtra="@dimen/film_watch_notice_line_space_shoufa"
        android:text="@string/film_watch_notice_content_shoufa"
        android:textColor="@color/color_ee"
        android:textSize="@dimen/film_watch_notice_content_text_size"
        app:letter_spacing="0.3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/film_watch_notice_btn_vg_margin_top_shoufa"
        android:orientation="horizontal">
        <Button
            android:id="@+id/film_watch_notice_hide"
            android:layout_width="@dimen/film_watch_notice_btn_width"
            android:layout_height="@dimen/film_watch_notice_btn_height"
            android:background="@drawable/dialog_button_selector"
            android:text="@string/film_watch_notice_hide"
            android:textColor="@color/color_ee"
            android:textSize="@dimen/film_watch_notice_btn_text_size"/>
        <Button
            android:id="@+id/film_watch_notice_hide_always"
            android:layout_width="@dimen/film_watch_notice_btn_width"
            android:layout_height="@dimen/film_watch_notice_btn_height"
            android:layout_marginLeft="@dimen/film_watch_notice_btn_margin_h"
            android:background="@drawable/dialog_button_selector"
            android:text="@string/film_watch_notice_hide_always"
            android:textColor="@color/color_ee"
            android:textSize="@dimen/film_watch_notice_btn_text_size"/>
    </LinearLayout>
</LinearLayout>
