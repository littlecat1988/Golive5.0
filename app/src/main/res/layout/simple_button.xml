<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sel_film_detail_btn_bg_large"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/film_detail_play_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/simple_btn_pb_margin_bottom"
        android:layout_marginLeft="@dimen/simple_btn_pb_margin_w_middle"
        android:layout_marginRight="@dimen/simple_btn_pb_margin_w_middle"
        android:layout_marginTop="@dimen/simple_btn_pb_margin_top"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv"
        style="@style/film_detail_txt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/simple_btn_padding_bottom"
        android:shadowColor="@color/film_detail_button_shadow_color"
        android:shadowDx="0"
        android:shadowDy="0.99"
        android:shadowRadius="1"/>
</FrameLayout>

