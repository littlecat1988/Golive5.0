<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_message_header_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/repeat_mac_header_logo_left"
        android:layout_marginTop="@dimen/repeat_mac_header_logo_top"
        android:background="@drawable/header_logo"/>

    <ImageView
        android:id="@+id/image_message_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_message_bg"/>

    <include
        android:id="@+id/repeat_phone_login_step1"
        layout="@layout/repeat_phone_login_step1"
        android:visibility="gone"/>

    <include
        android:id="@+id/repeat_phone_login_step2"
        layout="@layout/repeat_phone_login_step2"
        android:visibility="gone"/>

    <include
        android:id="@+id/repeat_mac_operate_step1"
        layout="@layout/repeat_mac_operate_step1"
        android:visibility="gone"/>

    <include
        android:id="@+id/repeat_mac_operate_step2"
        layout="@layout/repeat_mac_operate_step2"
        android:visibility="gone"/>

    <include
        android:id="@+id/repeat_mac_operate_step3"
        layout="@layout/repeat_mac_operate_step3"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/repeat_common_text_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/repeat_mac_text_tips_bottom"
        android:gravity="center"
        android:textColor="@color/network_error_color__bottom_tips"
        android:textSize="@dimen/repeat_mac_text_tips_size"/>

</RelativeLayout>
