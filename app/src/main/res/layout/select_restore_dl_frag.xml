<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        style="@style/download_sel_media_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/download_select_restore_storage_title_margin_top"
        android:text="@string/download_select_restore_storage_title"/>

    <LinearLayout
        android:id="@+id/storage_vg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/download_restore_storage_vg_margin_top"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>