<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/user_history_getting_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/history_wait_content_h"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/history_wait_content_mg_t"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/user_history_noitem_image"
                android:layout_width="@dimen/history_wait_image_w"
                android:layout_height="@dimen/history_wait_image_w"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_info_circul_normal"/>
            <TextView
                android:id="@+id/user_history_noitem_wait"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/history_wait_text_mg_l"
                android:gravity="left|center_vertical"
                android:text="@string/history_getlist_waitting"
                android:textColor="@color/color_ee"
                android:textSize="@dimen/history_wait_text_ts"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>