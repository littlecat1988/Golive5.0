<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:background="@drawable/sel_user_info_item_bg"
              android:layout_height="@dimen/message_item_minh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_item_minh"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/message_item_image_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/message_item_red_mg_l"
            android:layout_marginTop="@dimen/message_item_red_mg_t"
            android:src="@drawable/user_message_red"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/message_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/message_item_image_margin_l"
            android:src="@drawable/user_message_icon_book"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/message_item_tv_mg_l"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/message_item_tv_mg_t">
                <TextView
                    android:id="@+id/message_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingMultiplier="1.3"
                    android:gravity="left|top"
                    android:lines="1"
                    android:textColor="@color/sel_user_color_info_text"
                    android:textSize="@dimen/message_detail_name_ts"/>

                <TextView
                    android:id="@+id/message_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/message_item_time_mg_r"
                    android:layout_marginTop="@dimen/message_item_time_mg_t"
                    android:lineSpacingMultiplier="1.5"
                    android:gravity="right|top"
                    android:lines="1"
                    android:textColor="@color/sel_user_color_info_text"
                    android:textSize="@dimen/message_detail_time_ts"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/message_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/message_item_detail_mg_r"
                android:layout_marginTop="@dimen/message_item_detail_mg_t"
                android:gravity="left"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/sel_user_color_info_text"
                android:textSize="@dimen/message_detail_content_ts"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
