<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.golive.cinema.views.ViewPagerExt
        android:id="@+id/fl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/tab_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/main_tab_layout_bottom_margin"
        android:gravity="center"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/tab_panel_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_tab_rectangle_line"
        android:visibility="gone"/>

</RelativeLayout>
