<?xml version="1.0" encoding="utf-8"?>
<com.golive.cinema.player.views.PlayerBusyingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/player_busying_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/theatre_play_network_speed_bar"
            style="@style/play_network_speed_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/theatre_play_tv_network_speed"
            style="@style/player_txt_white_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/player_busying_speed_margin_top"
            android:gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

</com.golive.cinema.player.views.PlayerBusyingView>