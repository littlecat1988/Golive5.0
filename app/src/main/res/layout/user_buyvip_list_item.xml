<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/vip_item_width"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sel_user_vip_item_bg"
        android:padding="@dimen/vip_item_padding" />

    <ImageView
        android:id="@+id/tv_benefit_icon"
        android:layout_width="@dimen/vip_package_lst_item_icon_w"
        android:layout_height="@dimen/vip_package_lst_item_icon_w"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/user_vip_coner" />

    <com.golive.cinema.views.RotateTextViewVip
        android:id="@+id/tv_benefit"
        android:layout_width="@dimen/vip_package_lst_item_icontext_w"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="@dimen/vip_package_lst_item_icontext_pl"
        android:singleLine="true"
        android:textColor="@color/color_ee"
        android:textSize="@dimen/vip_package_lst_item_benefit_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vip_item_name_mg_t"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/item_white_color"
            android:textSize="@dimen/vip_item_name_ts" />

        <TextView
            android:id="@+id/vip_item_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vip_item_price_mg_t"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textColor="@color/sel_user_color_gold"
            android:textSize="@dimen/vip_item_price_ts" />

        <TextView
            android:id="@+id/vip_item_tv_oldprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vip_item_old_price_mg_t"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textColor="@color/sel_user_color_vip_hui"
            android:textSize="@dimen/vip_item_old_price_ts"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/vip_item_bottom_text_mg_b"
        android:layout_marginLeft="@dimen/vip_item_bottom_text_mg_l"
        android:layout_marginRight="@dimen/vip_item_bottom_text_mg_r"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/vip_text_deep_red"
        android:textSize="@dimen/vip_package_lst_item_benefit_size" />
</RelativeLayout>