<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="TvRecyclerView">
        <attr name="android:orientation" tools:ignore="ResourceName"/>
        <attr name="tv_layoutManager" format="string"/>
        <attr name="tv_numColumns" format="integer"/>
        <attr name="tv_numRows" format="integer"/>
        <attr name="tv_selectedItemOffsetStart" format="dimension"/>
        <attr name="tv_selectedItemOffsetEnd" format="dimension"/>
        <attr name="tv_itemExtendwidth" format="dimension"/>
        <attr name="tv_selectedItemIsCentered" format="boolean"/>
        <attr name="tv_isInterceptKeyEvent" format="boolean"/>
        <attr name="tv_isMenu" format="boolean"/>
        <attr name="tv_isSelectFirstVisiblePosition" format="boolean"/>
        <attr name="tv_loadMoreBeforehandCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PastTopicRecyclerView">
       <attr name="pastTopic_selectedItemOffsetStart" format="dimension"/>
       <attr name="pastTopic_selectedItemOffsetEnd" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="TvRecyclerView_StaggeredGridViewChild">
        <attr name="tv_span" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TvRecyclerView_SpannableGridViewChild">
        <attr name="tv_colSpan" format="integer"/>
        <attr name="tv_rowSpan" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LetterSpacingTextView">
        <attr name="letter_spacing" format="float"/>
        <attr name="max_lines" format="integer"/>
        <attr name="auto_max_lines" format="boolean"/>
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleLayoutView">
        <attr name="circle_progress" format="integer"/>
        <attr name="circle_max" format="integer"/>
        <attr name="circle_starting_degree" format="integer"/>
        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>
        <attr name="circle_finished_stroke_width" format="dimension"/>
        <attr name="circle_unfinished_stroke_width" format="dimension"/>
        <attr name="circle_time_text_size" format="dimension"/>
        <attr name="circle_time_text_color" format="color"/>
        <attr name="circle_time_text" format="string"/>
        <attr name="circle_background_color" format="color"/>
        <attr name="circle_per_text_size" format="dimension"/>
        <attr name="circle_per_text_color" format="color"/>
        <attr name="circle_per_text" format="string"/>
    </declare-styleable>
</resources>
