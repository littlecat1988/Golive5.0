<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/translucent"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical"
              android:gravity="bottom">
            <shape>
                <solid android:color="@color/download_restore_download_progressbar"/>
                <corners
                    android:bottomLeftRadius="@dimen/download_restore_storage_progress_corner_radius"
                    android:bottomRightRadius="@dimen/download_restore_storage_progress_corner_radius"/>
            </shape>
        </clip>
    </item>

</layer-list>